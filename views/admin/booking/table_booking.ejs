<!-- DataTables Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            <i class="fas fa-plus"></i> Add Booking
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Invoice</th>
                        <th>Date</th>
                        <th>Item</th>
                        <th>Member Name</th>
                        <th>Account Holder</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < booking.length; i++){ %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td>#<%= booking[i].invoice %></td>
                            <td><%= booking[i].bookingStartDate.toLocaleString().split(',')[0] %> s.d <%= booking[i].bookingEndDate.toLocaleString().split(',')[0] %></td>
                            <td><%= booking[i].itemId[0].title %></td>
                            <td><%= booking[i].memberId.firstName + " " + booking[i].memberId.lastName %></td>
                            <td><%= booking[i].payments.accountHolder %></td>
                            <td><%= booking[i].payments.status %></td>
                            <td>
                                <a href="/admin/booking/<%= booking[i].id%>" class="btn btn-success btn-circle btn-sm button-update">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>